{% extends 'base.html.twig' %}

{% block title %}Evennement index{% endblock %}

{% block body %}
    <h1>Evennement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idevent</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date</th>
                <th>Img</th>
                <th>Lieu</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evennement in evennements %}
            <tr>
                <td>{{ evennement.idevent }}</td>
                <td>{{ evennement.titre }}</td>
                <td>{{ evennement.description }}</td>
                <td>{{ evennement.date ? evennement.date|date('Y-m-d') : '' }}</td>
                <td>{{ evennement.img }}</td>
                <td>{{ evennement.lieu }}</td>
                <td>{{ evennement.adresse }}</td>
                <td>
                    <a href="{{ path('app_evennement_show', {'idevent': evennement.idevent}) }}">show</a>
                    <a href="{{ path('app_evennement_edit', {'idevent': evennement.idevent}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evennement_new') }}">Create new</a>
{% endblock %}
