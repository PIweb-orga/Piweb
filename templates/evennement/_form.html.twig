{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="fils" style="padding-left: 300px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Champ Date -->
            <div class="mb-3">
                {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Date'}}) }}
                {{ form_errors(form.date)|join(', ')|raw }}
            </div>

            <!-- Champ Description -->
          <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Description'}}) }}
                {% if form.description.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.description)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6">
            <!-- Autres champs avec validation -->
            <div class="mb-3">
                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre)|join(', ')|raw }}
            </div>

            <div class="mb-3">
                {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.lieu)|join(', ')|raw }}
            </div>

 <div class="mb-3">
                {{ form_label(form.img, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.img, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.img)|join(', ')|raw }}
            </div>



            <div class="mb-3">
                {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresse)|join(', ')|raw }}
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
{{ form_end(form) }}