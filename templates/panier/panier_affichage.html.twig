{# templates/panier/panier_affichage.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h2>Votre Panier</h2>

    {% if panier is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Plat</th>
                    <th>Quantit√©</th>
                    <th>Prix unitaire</th>
                    <th>Montant total</th>
                </tr>
            </thead>
            <tbody>
                {% for achat in panier %}
                    <tr>
                        <td>{{ achat.plat.nom }}</td>
                        <td>{{ achat.quantite }}</td>
                        <td>{{ achat.plat.prix }}</td> {# Corrected line #}
                        <td>{{ achat.montanttotal }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <p>Total du panier: {{ totalPanier }}</p>

    {% endif %}
{% endblock %}
