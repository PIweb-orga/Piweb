{% extends 'base.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
    <div class="fils" style="padding-left: 300px;">
        <h1>Avis index</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Title</th>
                    <th>Restaurant</th>
                    <th>Publication</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for avi in avis %}
                    <tr>
                        <td>{{ avi.user.username }}</td>
                        <td>{{ avi.titreavis }}</td>
                        <td>{{ avi.restaurant.nom }}</td>
                        <td>{{ avi.pubavis }}</td>
                        <td>{{ avi.dateavis ? avi.dateavis|date('Y-m-d') : '' }}</td>
                        <td>
                            <div class="button-container">
                                <button class="btn btn-secondary" onclick="window.location.href='{{ path('app_avis_show', {'id': avi.id}) }}'">
                                    Show
                                </button>
                                <button class="btn btn-warning" onclick="window.location.href='{{ path('app_avis_edit', {'id': avi.id}) }}'">
                                    Edit
                                </button>
                                {{ include('avis/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Create New Button -->
        <form method="get" action="{{ path('app_avis_new') }}">
            <button type="submit" class="btn btn-primary">Create new</button>
        </form>
    </div>

    <style>
        /* Vos styles CSS restent les mêmes comme vous les avez définis pour les badges */
        /* ... */
    </style>
{% endblock %}
