{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="fils" style="padding-left: 300px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Champ Date -->
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
