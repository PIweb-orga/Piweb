{% extends 'front.html.twig' %}

{% block content %}
    <section class="section" id="menu">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="section-heading">
                        <h6>Our Menu</h6>
                        <h2>Our selection of cakes with quality taste</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-item-carousel">
            <div class="col-lg-12">
                <div class="owl-menu-item owl-carousel">
                    {% for plat in plats %}
                        <div class="item">
                            <div class='card'>
                                <div class="combined-info">
                                    <img src="{{ asset('platimage/' ~ plat.image) }}" class="img-responsive smoothie" alt="{{ plat.nom }}">
                                    <div class="price-title-info">
                                        <div class="price"><h6>{{ plat.prix }}</h6></div>
                                        <div class='info'>
                                            <h1 class='title'>{{ plat.nom }}</h1>
                                            <p class='description'>{{ plat.description }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="main-text-button">
                                    <div class="scroll-to-section">
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
