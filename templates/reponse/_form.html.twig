{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="fils" style="padding-left: 300px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Champ Date -->
            <div class="mb-3">
                {{ form_label(form.daterep, 'Daterep', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.daterep, {'attr': {'class': 'form-control' ~ (form.daterep.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Daterep'}}) }}
                {% if form.daterep.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.daterep)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>

            <!-- Champ Contenue -->
            <div class="mb-3">
                {{ form_label(form.contenue, 'Contenue', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.contenue, {'attr': {'class': 'form-control' ~ (form.contenue.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Contenue'}}) }}
                {% if form.contenue.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.contenue)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>

            <!-- Champ Reclamation -->
          
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
     <a href="{{ path('app_reclamation_index') }}">back to list</a>
        {# L'attribut name="send_email" sera utilisé pour vérifier si ce bouton a été cliqué dans votre contrôleur #}
    </div>
</div>
{{ form_end(form) }}