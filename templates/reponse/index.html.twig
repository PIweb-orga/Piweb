{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table border="1" class="table">
        <thead>
            <tr>
                <th>Idrep</th>
                <th>Contenue</th>
                <th>Daterep</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idrep }}</td>
                <td>{{ reponse.contenue }}</td>
                <td>{{ reponse.daterep ? reponse.daterep|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'idrep': reponse.idrep}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'idrep': reponse.idrep}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
{% endblock %}
