{# templates/participant/_form.html.twig #}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="fils" style="padding-left: 300px;">
    <div class="row">
        <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.datepar, 'Date Participant', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.datepar, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.numero, 'Numero', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.numero, {'attr': {'class': 'form-control' ~ (form.numero.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Numero'}}) }}
                {% if form.numero.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.numero)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.event, 'Event', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.event, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
