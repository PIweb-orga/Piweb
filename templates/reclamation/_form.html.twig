{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="fils" style="padding-left: 300px;">
    <div class="row">
        <div class="col-md-6">
            <!-- Champ Date -->
            <div class="mb-3">
                {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control' ~ (form.date.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Date'}}) }}
                {% if form.date.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.date)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>

            <!-- Champ Description -->
          <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Description'}}) }}
                {% if form.description.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.description)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6">
            <!-- Autres champs avec validation -->
             <div class="mb-3">
                {{ form_label(form.typerec, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.typerec, {'attr': {'class': 'form-control' ~ (form.typerec.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Type'}}) }}
                {% if form.typerec.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.typerec)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>
          {% for type, messages in app.flashes %}
          {% for message in messages %}
           <div class="alert alert-{% if type is same as('error') %}danger{% else %}{{ type }}{% endif %}" role="alert" style="display: inline-block; width: fit-content;">
             {{ message }}
            </div>
          {% endfor %}
         {% endfor %}
          <div class="mb-3">
                {{ form_label(form.etatrec, 'Etat', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.etatrec, {'attr': {'class': 'form-control' ~ (form.etatrec.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Etat'}}) }}
                {% if form.etatrec.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.etatrec)|join(', ')|raw }}
                    </div>
                {% endif %}
            </div>

            <div class="mb-3">
                {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.user)|join(', ')|raw }}
            </div>
            
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
      
</div>
{{ form_end(form) }}