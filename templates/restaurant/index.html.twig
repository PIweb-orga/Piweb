{% extends 'base.html.twig' %}

{% block title %}Restaurant index{% endblock %}

{% block body %}
<div class="fils" style="padding-left: 300px;">
    <h1>Restaurant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdRestau</th>
                <th>Nom</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.idRestau }}</td>
                <td>{{ restaurant.nom }}</td>
                <td>{{ restaurant.location }}</td>
                <td>

                    <button class="btn btn-secondary" onclick="window.location.href='{{ path('app_restaurant_show', {'idRestau': restaurant.idRestau}) }}'">
    Show
</button>
</td>
<td>
                  <button class="btn btn-warning" onclick="window.location.href='{{ path('app_restaurant_edit', {'idRestau': restaurant.idRestau}) }}'">
    Edit
</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <form method="get" action="{{ path('app_restaurant_new') }}">
    <button type="submit" class="btn btn-primary">Create new</button>
</form>

    </div>
{% endblock %}
