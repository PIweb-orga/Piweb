{# templates/profile.html.twig #}

{% extends 'front.html.twig' %}

{% block header %}{% endblock %}
{% block section %}{% endblock %}
{% block footer %}{% endblock %}
{% block section2 %}{% endblock %}
{% block title %}Profile{% endblock %}

{% block body %}
    <h1></h1>

    {{ include('user/formedit.html.twig', {'button_label': 'Update'}) }}
    
    <!-- Add classes to center the text -->
    <div class="text-center" style="margin-top: 20px;">
        <p class="small mb-0" style="font-size: 18px;">
            {% if app.user.resetToken is not empty %}
                <a href="{{ path('app_reset_password', {'token': app.user.resetToken}) }}" style="color: #007bff; text-decoration: underline;">Change my Password?</a>
            {% else %}
                <!-- Handle the case where resetToken is empty -->
                <a href="{{ path('generate_and_redirect') }}" style="color: #007bff; text-decoration: underline;">Generate and Change Password</a>
            {% endif %}
        </p>
    </div>
{% endblock %}
